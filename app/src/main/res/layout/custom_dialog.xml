<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:background="@drawable/bg_update_shape"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.news.yazhidao.widget.TextViewExtend
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:text="发现新版本"
            android:textStyle="bold"
            android:textColor="#333333"
            android:textSize="15sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ebebeb" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="发现新版本，更新内容，发现新版本，请更新内容，发现新版本，更新内容，发现新版本，请更新内容"
                android:textSize="14sp"
                android:textColor="#333333"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/negativeButton"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:background="@drawable/bg_update_cancel_shape"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/positiveButton"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="更新"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/bg_update_confim_shape"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>