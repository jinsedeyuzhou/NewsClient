<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="clickableBackground">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="Theme.Light" parent="AppTheme">
        <!--<item name="android:windowBackground">@color/default_window_bg</item>-->
        <item name="android:listSelector">?clickableBackground</item>
        <item name="clickableBackground">@drawable/clickable_background</item>
        <item name="fontPrimary">@color/colorPrimary</item>
        <item name="mainBackground">@color/white</item>
        <item name="fontPrimaryDark">@color/white</item>
        <item name="dividerBlack">@color/colorPrimaryDark</item>
        <item name="dividerLight">@color/gainsboro</item>
        <item name="fontAccent">@color/white</item>
        <item name="minorBackground">@color/white</item>
        <item name="windowNoTitle">?android:windowNoTitle</item>
    </style>

    <style name="Theme.Night" parent="AppTheme">
        <!--<item name="android:windowBackground">@color/default_window_bg_night</item>-->
        <item name="android:listSelector">?clickableBackground</item>
        <item name="clickableBackground">@drawable/clickable_background</item>
        <item name="fontPrimary">@color/colorPrimary</item>
        <item name="mainBackground">@color/white</item>
        <item name="fontPrimaryDark">@color/white</item>
        <item name="dividerBlack">@color/grey</item>
        <item name="dividerLight">@color/gainsboro</item>
        <item name="fontAccent">@color/white</item>
        <item name="minorBackground">@color/white</item>
        <item name="windowNoTitle">?android:windowNoTitle</item>
    </style>
    <!--<style name="the" parent="Theme.AppCompat.DayNight"/>-->


    <style name="HomeTab" />
    <style name="HomeTab.Badge" parent="@style/HomeTab">
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-4.0dip</item>
        <item name="android:layout_marginRight">-4.0dip</item>
        <item name="android:src">@drawable/bg_badge_new_message</item>
    </style>
    <style name="HomeTab.Icon" parent="@style/HomeTab">
        <item name="android:layout_width">@dimen/activity_margin_20</item>
        <item name="android:layout_height">@dimen/activity_margin_20</item>
    </style>
    <style name="HomeTab.Layout" parent="@style/HomeTab">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="HomeTab.Text" parent="@style/HomeTab">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2.0dip</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TextAppearanceBig" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bottombar_action">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_weight">0.0</item>
    </style>



    <declare-styleable name="CustomCircleProgress">
        <attr name="circleColor" format="color" />
        <attr name="circleInnerColor" format="color" />
        <attr name="circleRadius" format="dimension" />
        <attr name="circleProgressColor" format="color" />
        <attr name="circleWidth" format="dimension" />
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="max" format="integer"/>
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="style" >
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>


    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--Log-->

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

</resources>
